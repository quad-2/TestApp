<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/store_image"
            android:layout_width="@dimen/store_image_height_width"
            android:layout_height="@dimen/store_image_height_width"
            android:layout_margin="@dimen/card_padding"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:text="distance test"
            android:textSize="@dimen/text_size_10sp" />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_margin_10dp"
            android:layout_marginEnd="@dimen/card_modified_elevation"
            android:layout_toStartOf="@id/distance"
            android:layout_toEndOf="@id/store_image"
            android:maxLines="2"
            android:text="testing 1"
            android:textSize="@dimen/text_size_12sp"
            android:layout_alignTop="@+id/store_image" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/store_name"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/size_margin_10dp"
            android:layout_toEndOf="@id/store_image"
            android:text="test 2"
            android:textSize="@dimen/text_size_12sp" />




    </RelativeLayout>

</android.support.v7.widget.CardView>